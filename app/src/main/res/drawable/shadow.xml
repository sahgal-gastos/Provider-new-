<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Drop Shadow Stack -->
    <item>
        <shape>

            <gradient
                android:startColor="#fff"
                android:endColor="@android:color/transparent"
                android:angle="90" />
         </shape>
    </item>


    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <gradient
                android:startColor="#33000000 "
                android:endColor="@android:color/transparent"
                android:angle="90" />
            <corners android:radius="3dp" />
        </shape>
    </item>

     <item android:drawable="@drawable/shop"
         android:bottom="10dp"
         android:left="10dp"
         android:right="10dp"
         android:top="10dp">

    </item>

</layer-list>